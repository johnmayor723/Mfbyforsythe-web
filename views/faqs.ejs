<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Mfbyforsythebrand</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active text-white">FAQs</li>
    </ol>
</div>
<!-- Single Page Header End -->

<section style="font-family: Arial, sans-serif; max-width: 600px; margin: 50px auto 0; padding: 30px;">
    <h2 style="color: #2E8B57;">Frequently Asked Questions (FAQ)</h2>

    <div style="border-top: 1px solid #ccc; padding-top: 10px;">
        <div class="faq-item" style="background-color: #ffffff; padding: 10px;">
            <h3 onclick="toggleAnswer(1)" style="cursor: pointer; color: #2E8B57;">
                What sizes do you offer?
            </h3>
            <p id="answer-1" style="display: none; padding-left: 10px;">
                We offer a wide range of sizes from XS to XXL. Please check our size guide for accurate measurements before placing an order.
            </p>
        </div>
        <hr style="margin: 0; border: 1px solid #ccc;">

        <div class="faq-item" style="background-color: #f9f9f9; padding: 10px;">
            <h3 onclick="toggleAnswer(2)" style="cursor: pointer; color: #2E8B57;">
                How do I place an order?
            </h3>
            <p id="answer-2" style="display: none; padding-left: 10px;">
                Simply browse our catalog, add your favorite items to the cart, and proceed to checkout. You can pay using various secure payment options.
            </p>
        </div>
        <hr style="margin: 0; border: 1px solid #ccc;">

        <div class="faq-item" style="background-color: #ffffff; padding: 10px;">
            <h3 onclick="toggleAnswer(3)" style="cursor: pointer; color: #2E8B57;">
                What is your return and exchange policy?
            </h3>
            <p id="answer-3" style="display: none; padding-left: 10px;">
                We accept returns and exchanges within 14 days of delivery. Items must be unworn, in their original condition, and with all tags attached.
            </p>
        </div>
        <hr style="margin: 0; border: 1px solid #ccc;">

        <div class="faq-item" style="background-color: #f9f9f9; padding: 10px;">
            <h3 onclick="toggleAnswer(4)" style="cursor: pointer; color: #2E8B57;">
                How long does shipping take?
            </h3>
            <p id="answer-4" style="display: none; padding-left: 10px;">
                Standard shipping takes 5-7 business days, while express shipping takes 2-3 business days. International delivery times may vary.
            </p>
        </div>
        <hr style="margin: 0; border: 1px solid #ccc;">

        <div class="faq-item" style="background-color: #ffffff; padding: 10px;">
            <h3 onclick="toggleAnswer(5)" style="cursor: pointer; color: #2E8B57;">
                Do you offer custom or made-to-measure outfits?
            </h3>
            <p id="answer-5" style="display: none; padding-left: 10px;">
                Yes, we offer custom tailoring for select designs. Contact our customer support team for details on made-to-measure options.
            </p>
        </div>
    </div>
</section>

<script>
    function toggleAnswer(id) {
        const answer = document.getElementById(`answer-${id}`);
        answer.style.display = answer.style.display === 'none' ? 'block' : 'none';
    }
</script>