

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Edit Blog</h1>
        <p class="lead">Modify your blog details below.</p>
    </div>

    <div class="card p-4">
        <h3>Edit Blog</h3>
        <form action="/management/blogs/update/<%= blog._id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Title:</label>
                <input type="text" class="form-control" name="title" value="<%= blog.title %>" required>
            </div>

            <div class="form-group">
                <label>Current Image:</label>
                <img src="<%= blog.image %>" class="img-fluid mb-3" alt="Blog Image">
                <input type="file" class="form-control" name="image">
            </div>

            <div class="form-group">
                <label>Content:</label>
                <textarea class="form-control" name="content" rows="4" required><%= blog.content %></textarea>
            </div>

            <button type="submit" class="btn btn-success">Update Blog</button>
        </form>
    </div>
</div>


